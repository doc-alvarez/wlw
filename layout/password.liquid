<body class="template-password">

  <a href="#LoginModal" class="password-login-link js-modal-open-login-modal text-white">
    {% include 'icon-lock' %}
    {{ 'general.password_page.password_link' | t }}
  </a>

  <div class="password-page page-width text-center" role="main">
    <div class="password-page__inner">
      <div class="password-page__content">
      {{ content_for_layout }}
      </div>
    </div>
  </div>

  <div id="LoginModal" class="modal">
    <div class="modal__inner">
      <div class="modal__centered password-modal__content page-width text-center text-white">
        <p class="h4 text-white">{{ 'general.password_page.login_form_heading' | t }}</p>
        <div class="password-login-form">
          {% form 'storefront_password' %}
            {{ form.errors | default_errors }}
            <label for="password" class="label--hidden">{{ 'general.password_page.login_form_password_label' | t }}</label>
            <div class="input-group">
              <input type="password" name="password" id="Password" class="input-group__field input--content-color form-control" placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
              <div class="input-group-append">
                <span class="input-group__btn">
                  <button type="submit" name="commit" class="btn btn--narrow btn-theme">
                    {% include 'icon-arrow-right' %}
                    <span class="icon__fallback-text">{{ 'general.password_page.login_form_submit' | t }}</span>
                  </button>
                </span>
              </div>
             
            </div>
          {% endform %}
        </div>
        <p>{{ 'general.password_page.admin_link_html' | t }}</p>
      </div>
    </div>
    <button type="button" class="modal__close js-modal-close text-link">
      {% include 'icon-close' %}
      <span class="icon__fallback-text">{{ 'general.accessibility.close_modal' | t | json }}</span>
    </button>
  </div>

</body>
</html>
